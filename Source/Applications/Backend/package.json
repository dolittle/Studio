{
    "name": "applications.backend",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "private": "true",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "NODE_ENV=development nodemon ./index.ts",
        "debug": "NODE_ENV=development nodemon --inspect=0 -e ts --exec node -r ts-node/register index.ts",
        "start": "NODE_ENV=development ts-node index.ts",
        "build": "yarn clean && webpack --env.production --mode=production",
        "clean": "tsc -b --clean",
        "test": "mocha",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "lint:ci": "eslint '*/**/*.{js,ts,tsx}' --quiet",
        "ci": "yarn clean && yarn lint:ci && tsc -b && yarn test"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "ignore": [
            "dist",
            "*.d.ts"
        ],
        "execMap": {
            "ts": "ts-node"
        },
        "watch": [
            "./",
            "../../Shared/Backend",
            "../../Shared/DependencyInversion"
        ],
        "ext": "ts"
    },
    "dependencies": {
    }
}