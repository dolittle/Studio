{
    "name": "devcentral",
    "version": "1.0.0",
    "description": "",
    "main": "build/index.js",
    "scripts": {
        "clean": "tsc -b --clean backend",
        "build:backend": "cd backend && webpack --env.production --mode=production",
        "build:web": "cd web && webpack --env.production --mode=production",
        "build": "tsc -b backend && cd web && webpack --env.production --mode=production",
        "build:dev": "cd web && webpack --env.development --mode=development",
        "start:electron": "tsc --project backend",
        "start": "cd web && webpack-dev-server --mode=development --watch --progress --hot --verbose --display-error-details",
        "start:dev": "yarn clean && concurrently \"npm:start:electron\" \"yarn start\" \"wait-on http://localhost:9100 && sleepms 10000 && nodemon\"",
        "pack": "electron-builder --dir",
        "dist": "yarn build:web && yarn build:backend && electron-builder"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "execMap": {
            "js": "electron backend/dist/index.js"
        },
        "watch": [
            "./backend/dist"
        ],
        "ext": "js"
    },
    "build": {
        "productName": "Dolittle Developer Central",
        "appId": "com.dolittle.dev-central",
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "files": [
            "!node_modules",
            "build"
        ]
    },
    "author": "Dolittle",
    "license": "MIT",
    "dependencies": {
        "@dolittle/vanir-common": "6.1.1",
        "@fluentui/react-charting": "5.0.0-beta.0",
        "@shared/styles": "1.0.0",
        "@shared/web": "1.0.0",
        "byline": "^5.0.0",
        "create-dolittle-app": "6.1.1",
        "create-dolittle-microservice": "6.1.1",
        "dockerode": "^3.2.1",
        "electron-is-dev": "^1.2.0",
        "electron-squirrel-startup": "^1.0.0",
        "xterm-addon-fit": "^0.4.0",
        "xterm-for-react": "1.0.4"
    },
    "devDependencies": {
        "@types/byline": "^4.2.32",
        "@types/dockerode": "^3.2.1",
        "@types/mongodb": "^3.6.3",
        "electron": "11.1.1",
        "electron-builder": "^22.9.1",
        "rimraf": "3.0.2",
        "shebang-loader": "^0.0.1",
        "sleep-ms": "2.0.1",
        "wait-on": "5.2.0"
    }
}
