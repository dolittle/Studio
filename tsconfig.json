{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": ".",
        "paths": {
            "@shared/backend*": ["Source/Shared/Backend*"],
            "@shared/components*": ["Source/Components*"],
            "@shared/dependencyinversion*": ["Source/DependencyInversion*"],
            "@shared/mvvm*": ["Source/MVVM*"],
            "@shared/platform*": ["Source/Platform*"],
            "@shared/portal*": ["Source/Portal*"],
            "@shared/styles*": ["Source/Styles*"],
            "@shared/web*": ["Source/Web*"],
            "@shared/webpack*": ["Source/WebPack*"]
        },


        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "allowJs": false,
        "checkJs": false,
        "module": "CommonJS",
        "noEmit": false,
        "pretty": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,

        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "stripInternal": true,
        "allowSyntheticDefaultImports": true,
        "watch": true,
        "forceConsistentCasingInFileNames": true,
        "assumeChangesOnlyAffectDirectDependencies": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "newLine": "lf"
     },

     "exclude": [
         "**/dist"
     ]
}
